{
    "name": "inpatient-opioid-tool",
    "version": "1.0.0",
    "description": "A clinical decision support tool for inpatient opioid management.",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"node esbuild.config.mjs\" \"npm run build:css -- --watch\"",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run build:web",
        "dev:web": "vite",
        "build:web": "vite build --outDir web-dist",
        "cap:sync": "npx cap sync",
        "cap:open": "npm run build:web && npx cap sync && npx cap open ios",
        "ios:open": "npm run cap:open"
    },
    "keywords": [],
    "author": "Daniel Bergholz",
    "license": "MIT",
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@types/node": "^22.12.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "5.29.0",
        "@typescript-eslint/parser": "5.29.0",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "builtin-modules": "3.3.0",
        "concurrently": "^9.2.1",
        "esbuild": "0.17.3",
        "obsidian": "^1.5.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.19",
        "tslib": "2.4.0",
        "typescript": "4.7.4",
        "vite": "^7.3.0"
    },
    "dependencies": {
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "lucide-react": "^0.263.1",
        "posthog-js": "^1.116.6",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}