{
    "name": "inpatient-opioid-tool",
    "version": "1.0.0",
    "description": "A clinical decision support tool for inpatient opioid management.",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"node esbuild.config.mjs\" \"npm run build:css -- --watch\"",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run build:web",
        "build:web": "mkdir -p web-dist && cp index.html web-dist/index.html && node esbuild.web.mjs production && npm run build:web:css",
        "build:web:css": "tailwindcss -i ./src/input.css -o ./web-dist/web-styles.css",
        "cap:sync": "npx cap sync",
        "cap:open": "npx cap open ios",
        "ios:build": "npm run build:web && npx cap sync"
    },
    "keywords": [],
    "author": "Daniel Bergholz",
    "license": "MIT",
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@types/node": "^16.11.6",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "5.29.0",
        "@typescript-eslint/parser": "5.29.0",
        "autoprefixer": "^10.4.23",
        "builtin-modules": "3.3.0",
        "concurrently": "^9.2.1",
        "esbuild": "0.17.3",
        "obsidian": "^1.5.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.19",
        "tslib": "2.4.0",
        "typescript": "4.7.4"
    },
    "dependencies": {
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "lucide-react": "^0.263.1",
        "posthog-js": "^1.116.6",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
